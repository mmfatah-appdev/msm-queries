<h1>
 Actor #<%= @the_actor.id %> details
</h1>


<a href="/actors" class="btn btn-block btn-outline-secondary">
 Go back
</a>


&nbsp;|&nbsp;


<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
 Delete actor
 <small>
 </small>
</a>


<hr>


<dl>
 <dt>
   Name
 </dt>
 <dd>
   <%= @the_actor.name %>
 </dd>


 <dt>
   Dob
 </dt>
 <dd>
   <%= @the_actor.dob %>
 </dd>


 <dt>
   Bio
 </dt>
 <dd>
   <%= @the_actor.bio %>
 </dd>


 <dt>
   Image
 </dt>
 <dd>
    <img src="<%= @the_actor.image %>">

 </dd>
 <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
 </dl>
<hr>
<h1>
Filmography
</h1>
 <table border="1">
<tr>
  <th>
    Title 
  </th>
  <th>
    Year
  </th>
  <th>
    Director
  </th>
<th>
    Character name
  </th>
  <th>
    </th>


</tr>
<% characters = Character.where({ :actor_id => @the_actor.id}) %>
<% characters.each do |role| %>

<% m= Movie.where({ :id => role.movie_id}).at(0) %>
<tr>
  <td>
      <%= m.title %>
  </td>

   <td>
   <%= m.year %>
   </td>
    <%d = Director.where({ :id => m.director_id }).at(0) %>
  <td>

    <%= d.name %>

  </td>


   <td>
    <%= role.name %>

  </td>

  <td>
    <a href="/movies/<%= m.id %>">
      Show details 
      </a>
    
    </td>


</tr>
<% end %>
</table>
